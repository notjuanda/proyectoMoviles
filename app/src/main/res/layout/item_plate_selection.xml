<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/checkboxPlate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:checked="false" />

    <TextView
        android:id="@+id/textViewPlateName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/checkboxPlate"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Plate Name" />

    <TextView
        android:id="@+id/textViewPlateDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/checkboxPlate"
        app:layout_constraintTop_toBottomOf="@id/textViewPlateName"
        tools:text="Plate Description" />

    <TextView
        android:id="@+id/textViewPlatePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/checkboxPlate"
        app:layout_constraintTop_toBottomOf="@id/textViewPlateDescription"
        tools:text="$10.00" />

</androidx.constraintlayout.widget.ConstraintLayout>
